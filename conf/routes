# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET        /                              controllers.Application.index(handle ?= "27788")
GET        /search                               controllers.SearchApplication.search()
GET        /discover/:basehandle/:handle/        controllers.SearchApplication.discover(basehandle: String, handle: String)
GET        /item/:community/:handle              controllers.SearchApplication.showItem(community:String, handle: String)
#GET         /communities                 controllers.Communities.index()
#GET         /communities/:id             controllers.Communities.show(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                         controllers.Assets.versioned(path="/public", file: Asset)
